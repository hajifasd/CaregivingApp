# ==================== 环境配置 ====================
# 环境类型: development, production, testing
FLASK_ENV=development

# ==================== 数据库配置 ====================
# MySQL 主机地址
MYSQL_HOST=localhost
# MySQL 端口号
MYSQL_PORT=3306
# MySQL 用户名
MYSQL_USERNAME=root
# MySQL 密码
MYSQL_PASSWORD=your_password_here
# MySQL 数据库名
MYSQL_DATABASE=caregiving_db

# ==================== 应用配置 ====================
# 应用密钥（生产环境请使用强随机密钥）
APP_SECRET=your_app_secret_key_here
# Flask 密钥（生产环境请使用强随机密钥）
FLASK_SECRET_KEY=your_flask_secret_key_here

# ==================== 管理员配置 ====================
# 管理员用户名
ADMIN_USERNAME=admin
# 管理员密码（生产环境请使用强密码）
ADMIN_PASSWORD=admin123

# ==================== 生产环境额外配置 ====================
# 服务器主机地址（生产环境）
# SERVER_HOST=0.0.0.0
# 服务器端口（生产环境）
# SERVER_PORT=5000
# 日志级别（production, development, testing）
# LOG_LEVEL=WARNING 